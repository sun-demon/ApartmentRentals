<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your full day theme here. -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="android:navigationBarColor">@color/gray</item>
        <item name="checkboxStyle">@style/CheckBoxTheme</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
    </style>

    <style name="CheckBoxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">15sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:button">@drawable/checkbox</item>
    </style>

    <style name="RadioButtonTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">15sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:button">@drawable/button_radio</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:layout_marginVertical">15sp</item>
        <item name="android:paddingHorizontal">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="MainButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:layout_marginVertical">15sp</item>
        <item name="android:paddingHorizontal">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_main</item>
    </style>

    <style name="TransparentButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
    </style>

    <style name="HeaderTextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">10sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextViewTheme" parent="HeaderTextViewTheme">
        <item name="android:layout_marginVertical">5sp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LineViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="SelectorTheme" parent="ButtonTheme">
        <item name="android:hint">@string/select</item>
        <item name="android:drawableEnd">@drawable/arrow_to_bottom</item>
    </style>

    <style name="RadioGroupTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RadioButtonYesTheme" parent="ButtonTheme">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_weight">.50</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/yes</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="RadioButtonNoTheme" parent="ButtonTheme">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_weight">.50</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/no</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ImageButtonTheme" parent="ButtonTheme">
        <item name="android:layout_width">180sp</item>
        <item name="android:layout_height">120sp</item>
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:layout_marginHorizontal">5sp</item>
    </style>

    <style name="SmallSelectorTheme" parent="SelectorTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:layout_marginVertical">0sp</item>
        <item name="android:layout_marginHorizontal">5sp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ActivityButtonTheme" parent="TransparentButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/hidden_gray</item>
    </style>

    <style name="NotImageViewTheme">
        <item name="android:layout_width">180sp</item>
        <item name="android:layout_height">120sp</item>
        <item name="android:background">@drawable/not_image_view_background</item>
        <item name="android:layout_marginHorizontal">5sp</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
         <item name="colorPrimaryDark">@android:color/white</item>
    </style>
</resources>