<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/>
            <corners android:radius="10sp"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="8dp">
        <layer-list>
            <item android:width="12sp" android:height="12sp" android:gravity="center" android:bottom="10sp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/light_gray"/>
                        <stroke android:color="@color/light_gray" android:width="1sp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="20sp" android:height="10sp" android:bottom="21sp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>